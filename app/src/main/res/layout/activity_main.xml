<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/general_cpu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:text="general cpu info"
        />
    <TextView
        android:id="@+id/total_mem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:maxLines="2"
        android:text="total memory"/>
    <TextView
        android:id="@+id/avail_mem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:maxLines="2"
        android:text="available memory"/>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ca.uwaterloo.usmmonitor.MainActivity"
        tools:ignore="MergeRootFrame">
    </FrameLayout>
</LinearLayout>